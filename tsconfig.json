{
  "compilerOptions": {
    "outDir": "./dist/types",
    "target": "es6",
    "moduleResolution": "node",
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["./src"],
  "typedocOptions": {
    "entryPoints": ["./src"],
    "out": "docs/docs"
  }
}
